{
  "name": "cwss-public",
  "version": "0.0.1",
  "description": "Code Workshop Systems Ltd public site using Express",
  "main": "index.js",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "jshint": "latest",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "postcss-cli": "^2.5.1"
  },
  "dependencies": {
    "adaro": "^1.0.4",
    "express": "~4.9.x"
  },
  "engines": {
    "node": "0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danb-cws/public_site"
  },
  "scripts": {
    "start": "node index.js",
    "lint": "jshint public/src/js/",
    "sass": "node-sass --output-style expanded --source-map dist/css/ -o dist/css/ src/sass/",
    "watch-sass": "nodemon -e scss -x \"npm run sass\"",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/main.css",
    "dust": "dust-compiler -s src/templates/ -d dist/views/ --nonotify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Dan",
    "Brown",
    "Code",
    "Workshop",
    "Systems",
    "Ltd",
    "Node",
    "Express",
    "Heroku"
  ],
  "author": "Dan Brown",
  "license": "MIT",
  "homepage": "https://github.com/danb-cws/public_site#readme"
}
